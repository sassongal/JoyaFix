<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- =========================================== -->
    <!-- Hardened Runtime - Required for Notarization -->
    <!-- =========================================== -->
    
    <!-- Allow JIT compilation (required for llama.cpp / Local LLM inference) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Disable library validation (required for loading local LLM models) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow unsigned executable memory (required for LLM.swift Metal compute) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- =========================================== -->
    <!-- App Sandbox Exceptions -->
    <!-- =========================================== -->
    
    <!-- Network access for Gemini API, OpenRouter, and Sparkle updates -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Read-write access to user-selected files (for export/import) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- =========================================== -->
    <!-- Accessibility and System Integration -->
    <!-- =========================================== -->
    
    <!-- Accessibility API access (required for text insertion and hotkeys) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- =========================================== -->
    <!-- Audio/Video (for Voice Input) -->
    <!-- =========================================== -->
    
    <!-- Microphone access for voice input feature -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    
    <!-- =========================================== -->
    <!-- Camera (for Vision Lab OCR) -->
    <!-- =========================================== -->
    
    <!-- Camera access for screen capture / vision features -->
    <key>com.apple.security.device.camera</key>
    <true/>
</dict>
</plist>
